<xml>
	<pragma once="true" />
	<set name="PROJECT_DIR" value="${haxelib:accentcolor}/src/accent/native" />

	<files id="__main__">
		<compilerflag value="-I${PROJECT_DIR}" />
		<flag value="/std:c++17"/>
		<compilerflag value="/std:c++17"/>
	</files>

	<files id="haxe">
		<compilerflag value="-I${PROJECT_DIR}" />
		<flag value="/std:c++17"/>
		<compilerflag value="/std:c++17"/>
	</files>

	<files id="accentcolor">
		<compilerflag value="-I${PROJECT_DIR}" />
		<file name="${PROJECT_DIR}/accentcolor.cpp" />
		<flag value="/std:c++17"/>
		<compilerflag value="/std:c++17"/>
	</files>

	<target id="haxe">
		<files id="accentcolor" />
		<section if="windows">
            <lib name="windowsapp.lib" />
        </section>
	</target>
</xml>